{
  "manifest_version": 3,
  "name": "BB Fixer",
  "version": "1.0.0",
  "description": "A simple Chrome extension that manipulates the DOM with a button click",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "BB Fixer"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ]
}